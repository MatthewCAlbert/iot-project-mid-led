{
  "name": "iot-led-project",
  "version": "0.1.0",
  "description": "",
  "main": "./dist/server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node .",
    "watch-sass": "sass -w src/public/scss/:dist/public/css/",
    "dev": "cross-env NODE_ENV=development concurrently \"ts-node-dev --respawn --transpile-only ./src/server.ts\" \"npm:watch-sass\"",
    "build-ts": "tsc",
    "build": "cross-env NODE_ENV=production npm run build-ts && npm run build:sass",
    "build:dev": "cross-env NODE_ENV=development npm run build-ts && npm run build:sass",
    "build:sass": "sass --style=compressed src/public/scss/:dist/public/css/",
    "typeorm:win": "ts-node ./node_modules/typeorm/cli.js",
    "migration:gen": "ts-node ./node_modules/.bin/typeorm migration:generate",
    "migration:run": "ts-node ./node_modules/.bin/typeorm migration:run",
    "migration:gen:win": "yarn run typeorm:win migration:generate",
    "migration:run:win": "yarn run typeorm:win migration:run",
    "test": "cross-env NODE_ENV=testing jest --silent=false --coverage --verbose --forceExit --detectOpenHandles"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.7.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "http-status": "^1.5.0",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "mqtt": "^4.2.8",
    "nanoid": "^3.1.22",
    "node-sass": "^6.0.1",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "typeorm": "^0.2.38",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.1",
    "@types/cors": "^2.8.12",
    "@types/eslint": "^7.2.13",
    "@types/express": "^4.17.12",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.3",
    "@types/node": "^16.3.0",
    "@types/shelljs": "^0.8.8",
    "@types/supertest": "^2.0.11",
    "@types/winston": "^2.4.4",
    "concurrently": "^6.2.0",
    "eslint": "^7.24.0",
    "jest": "^27.0.5",
    "sass": "^1.35.1",
    "shelljs": "^0.8.4",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.4"
  }
}
