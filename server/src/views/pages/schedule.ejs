<% extend('../components/layout') %>

<div class="row">

  <div class="col-12">
    <div class="card border-left-primary shadow h-100 py-2">
      <div class="card-body">
        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
          Schedules
        </div>
        <div class="d-flex mt-2 flex-column">
          <div class="mt-2 d-flex justify-content-end">
            <button class="btn btn-primary" onclick="getSchedulesData()"><i class="fas fa-sync mr-1"></i> Reload</button>&nbsp;
            <button class="btn btn-primary" data-toggle="modal" data-target="#scheduleModal" id="addScheduleButton">Add New Schedule</button>
          </div>
          <div class="mt-4">
            <table class="table table-striped table-responsive d-block d-md-table w-100" id="scheduleTable">
              <thead>
                  <th class="no-sort">ID</th>
                  <th>Name</th>
                  <th>When</th>
                  <th class="no-sort">Action</th>
              </thead>
              <tbody>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>

<!-- Schedule Modal-->
<div class="modal fade" id="scheduleModal" tabindex="-1" role="dialog" 
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Schedule</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="scheduleForm">

          <div class="form-group">
            <label for="">Name</label>
            <input type="text" class="form-control" name="name" required autocomplete="off"/>
          </div>
          <div class="form-group">
            <label for="">When</label>
            <input type="datetime-local" class="form-control" name="when" required />
          </div>
          <div class="form-group">
            <label for="">State</label>
            <select name="state" class="form-control" required>
              <option value="ON">ON</option>
              <option value="OFF">OFF</option>
            </select>
          </div>
          <div class="form-group">
            <label for="">Color</label>
            <input type="color" name="color" class="form-control" required />
          </div>
          <button type="submit" class="btn btn-primary">Save</button>

        </form>
      </div>
      <div class="modal-footer">
        <button class="btn btn-danger d-none" type="button" id="deleteScheduleButton"><i class="fas fa-trash"></i> Delete</button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>